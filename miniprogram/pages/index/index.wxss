/**index.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
}

/* 整体容器 */
.container {
  padding: 20px;
  background-color: #ffffff;
  min-height: 100vh;
}

/* 按钮区域 */
.button-group {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.btn {
  width: 80%;
  margin: 10px 0;
  padding: 12px;
  font-size: 16px;
  border: none;
  border-radius: 6px;
  background-color: #1aad19;
  color: #ffffff;
}

/* 结果展示区域 */
.result-section {
  margin-top: 20px;
  padding: 10px;
  background-color: #f5f5f5;
  border-radius: 6px;
}
.result-item {
  display: block;
  font-size: 16px;
  color: #555555;
  margin: 5px 0;
}

/* 导出按钮样式 */
.export-section {
  margin-top: 20px;
  display: flex;
  justify-content: center;
}
.export-btn {
  background-color: #007aff;
}